@model IEnumerable<NZRegionWalksMVC.Models.DTOs.RegionDTO>

<h1 class="mt-3">Regions</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>S/n</th>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>RegionImageUrl</th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach (var region in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>@region.RegionImageUrl</td>
            </tr>
            counter++;
        }
    </tbody>
</table>